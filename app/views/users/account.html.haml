%div#account.container.shadowbar
    %h1= t("user.account")
    %hr/
    = form_for @user, :url=> sign_upping_path(@user), method: "post", :html => {:class=> 'form-horizontal', :role=> 'form'} do |f|
        = f.text_field :id, type: "hidden"
        %div.form-group.row
            = f.label :classes, t('user.classes'), :class=>'col-md-3 control-label'
            %div.col-md-7
                %label{:class => "control-label"}= classesName(@user.classes)

        %div.form-group.row
            = f.label :name, t('user.name'), :class=>'col-md-3 control-label'
            %div.col-md-7
                = f.text_field :name, :class=>'form-control'

        %div.form-group.row
            = f.label :email, :class=>'col-md-3 control-label'
            %div.col-md-7
                = f.email_field :email, :class=>'form-control'

        %div.form-group.row
            = f.label :phone, t('user.phone'), :class=>'col-md-3 control-label'
            %div.col-md-7
                = f.number_field :phone, :class=>'form-control'

        %div.form-group
            %div.col-md-offset-3.col-md-10
                = f.submit t(:update, :scope=> [:helpers,:submit], :model=>''), :class=> 'btn btn-lg btn-success col-md-8'